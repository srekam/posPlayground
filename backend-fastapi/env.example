# PlayPark FastAPI Backend Environment Variables

# Application Configuration
PROJECT_NAME=playpark-api
API_VERSION=v1
ENVIRONMENT=development
DEBUG=true
PORT=50080
HOST=0.0.0.0

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=20
REFRESH_TOKEN_EXPIRE_DAYS=14
PASSWORD_MIN_LENGTH=8

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
MONGODB_URI=mongodb://admin:password123@localhost:27017/playpark?authSource=admin
MONGODB_MAX_POOL_SIZE=50
MONGODB_SERVER_SELECTION_TIMEOUT_MS=2000
MONGODB_SOCKET_TIMEOUT_MS=2000
MONGODB_CONNECT_TIMEOUT_MS=1000

# Redis Configuration
REDIS_URI=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=20
REDIS_SOCKET_TIMEOUT=5

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=15

# Idempotency Configuration
IDEMPOTENCY_ENABLED=true
IDEMPOTENCY_TTL_SECONDS=600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PATH=/metrics

# OAuth2 Configuration
OAUTH2_CLIENT_ID=playpark-web
OAUTH2_CLIENT_SECRET=your-oauth2-client-secret
OAUTH2_REDIRECT_URI=http://localhost:3000/callback

# Cookie Configuration
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax
COOKIE_DOMAIN=

# Demo Credentials (for development only)
DEMO_TENANT_ID=tenant_demo_01
DEMO_STORE_ID=store_demo_01
DEMO_MANAGER_EMAIL=manager@playpark.demo
DEMO_MANAGER_PIN=1234
DEMO_SITE_KEY=tenant_demo_01:store_demo_01:demo-secret-key
DEMO_POS_TOKEN=pos-token-1
DEMO_GATE_TOKEN=gate-token-1
DEMO_KIOSK_TOKEN=kiosk-token-1
